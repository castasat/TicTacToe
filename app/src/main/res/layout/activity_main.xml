<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.openyogaland.denis.tictactoe.MainActivity"
    android:id="@+id/relativeLayout"
    android:layout_margin="@dimen/spacer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flipcoin_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/tictactoe_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flipcoin_fragment_frame">
    </FrameLayout>

</RelativeLayout>